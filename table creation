CREATE TABLE users (ID serial primary key, Name VARCHAR(80), Pass VARCHAR(250), AvatarURL VARCHAR(250), BIO VARCHAR(200), Email VARCHAR(50));

CREATE TABLE articles (ID serial primary key, Title VARCHAR(100), Date Date, Preview VARCHAR(200),Body TEXT, Tag VARCHAR(100), ImageURL VARCHAR(250), USER_REF INTEGER REFERENCES users(ID) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE drafts (ID serial primary key, Title VARCHAR(100), Date Date, Preview VARCHAR(200), Body TEXT, Tag VARCHAR(100), ImageURL VARCHAR(250), USER_REF INTEGER REFERENCES users(ID) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE comments (ID serial primary key, Name VARCHAR(80), Text VARCHAR(300), ARTICLE_REF INTEGER REFERENCES articles(ID) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE medias (ID serial primary key, ImageURL VARCHAR(250) , USER_REF INTEGER REFERENCES users(ID) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE users_reg (ID serial primary key, Name VARCHAR(80), Pass VARCHAR(250), Email VARCHAR(50), Code VARCHAR(20));
//
CREATE TABLE analytics (ID serial primary key, Date Date, Platform VARCHAR(25), Device VARCHAR(25), ARTICLE_REF INTEGER REFERENCES articles(ID) ON DELETE CASCADE ON UPDATE CASCADE;
